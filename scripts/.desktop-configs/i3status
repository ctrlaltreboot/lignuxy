general {
    interval = 5
    colors = false
    markup = pango
    color_good = '#000000'
    color_degraded = '#ebcb8b'
    color_bad = '#ba5e57'
    # color_good = '#88b090'
    # color_degraded = '#ccdc90'
    # color_bad = '#e89393'
}

order += "volume master"
order += "disk /"
order += "wireless wlp3s0"
order += "battery 0"
order += "cpu_temperature 0"
order += "cpu_usage 0"
order += "load"
order += "tztime local"

wireless wlp3s0 {
    format_up = "<span background='#00eab7'>%quality  %essid %ip</span>"
    format_down = ""
}

