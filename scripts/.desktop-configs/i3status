tztime local {
    format = "<span background='#00eab7'> %time </span>"
    format_time = " %A %e-%B-%Y   %H:%M"
}

load {
    format = "<span background='#00eab7'>  %1min </span>"
}

cpu_usage {
    format = "<span background='#00eab7'>  %usage </span>"
}

cpu_temperature 0 {
    format = "<span background='#00eab7'>  %degrees°C </span>"

}

